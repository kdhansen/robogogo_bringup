<?xml version="1.0" encoding="UTF-8" ?>

<launch>

    <include file="$(find openni2_launch)/launch/openni2.launch" />

    <node type="depthimage_to_laserscan" pkg="depthimage_to_laserscan" name="depthimage_to_laserscan" output="screen">
        <remap from="image" to="/camera/depth/image_raw" />
    </node>
    
    <include file="$(find face_detector)/launch/face_detector.rgbd.launch">
        <arg name="camera" default="camera" />
        <arg name="image_topic" default="image_raw" />
        <arg name="depth_topic" default="image_raw" />
        <arg name="fixed_frame" default="camera_rgb_optical_frame" />
        <arg name="depth_ns" default="depth_registered" />
    </include>

    <node pkg="leg_detector" type="leg_detector" name="leg_detector" args="$(find leg_detector)/config/trained_leg_detector.yaml" output="screen">
        <param name="fixed_frame" value="camera_link" />
        <remap from="people_tracker_filter" to="/face_detector/people_tracker_measurements_array" />
    </node>

</launch>
